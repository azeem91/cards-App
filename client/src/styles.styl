.content-cover
	margin-top 74px
	width 100%
.content-area-align
	margin 135px auto
	width 75.3%

.card-deck
	-webkit-flex-flow row wrap
	-ms-flex-flow row wrap
	flex-flow row wrap
	.card
		display -webkit-box
		display -webkit-flex
		display -ms-flexbox
		display flex
		-webkit-box-flex 1
		-webkit-flex 1 0 0%
		-ms-flex 1 0 0%
		flex 1 0 0%
		-webkit-box-orient vertical
		-webkit-box-direction normal
        -webkit-flex-direction column
        -ms-flex-direction column
        flex-direction column
        
.card
	img
		width 100%
		height 142px
		border-radius 4px 4px 0 0
		
.card, .newCard
	position relative
	background-color #fff
	border 1px solid #ebebeb
	border-radius .25rem
	width 229px
	margin 0 12px 71px
	float left
	min-height 276px

.newCard
	border 3px dotted #ebebeb
	background-color #fff
	text-align center
	p
		color #999
		margin-top 13px
		height 40px
		
.card-block
	-webkit-box-flex 1
	-webkit-flex 1 1 auto
	-ms-flex 1 1 auto
	flex 1 1 auto
	overflow hidden
	height 49px
	padding 5px 14px
	margin-top 146px
	position absolute
	color #333
    p
    	overflow hidden
    	height inherit
    	text-overflow ellipsis
    	margin-bottom 0
    	
	
.card-img-top
	border-top-right-radius calc(.25rem - 1px)
	border-top-left-radius calc(.25rem - 1px)
    
.card-footer
	border-top 1px solid #ebebeb
	background-color #f7f7f9
	padding 3px 10px
	position absolute
	width 100%
	text-align center
	margin-bottom 0
	margin-top 244px
	height 30px
	vertical-align middle
	ul
		margin 0
		padding 0
		float left
		margin-left 16px
		li
			list-style none
			display inline
			margin-left 8px
			margin-right 16px
			color #afafaf
.addNewBtn
	background-color #f7f7f9
	font-size 16pt
	border-radius 50px
	margin 0 auto
	margin-top 98px
	text-align center
	width 32px
	color #fff
	
.pricing
	border-bottom 6px solid #CCC
	position absolute
	width 86%
	margin-top 198px
	margin-left 16px
	font-size 12px
	line-height 2
	padding 0 2px
	list-style none
	.price
		float left
	.state
		float right
		li
			display inline
		li
			&:nth-child(2)
				border-radius 4px
				height 6px
				width 6px
				margin 1px auto
				background-color #008000
				display inline-block

.dw-menu
	position absolute
	width 100%
	float right
	text-align right
	padding 5px
	.dropdown
		border none

.dropbtn
	color white
    font-size 16px
    border none
    cursor pointer
    list-style none
    padding 5px
    margin 5px
    
.dropdown
	position absolute
    display inline-block

.dropdown-content
	display none
	position absolute
	right 0
	background-color #f9f9f9
	box-shadow 0px 8px 16px 0px rgba(0,0,0,0.2)
	z-index: 1
	text-align left

.dropdown-content
	a
		color black
		text-decoration none
		display block

.dropdown-content
	a:hover
		background-color #f1f1f1

.dropdown:hover .dropdown-content
	display block
	